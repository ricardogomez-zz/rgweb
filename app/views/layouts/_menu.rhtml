<div id="menu">
  <div id="logo">
    <%= link_to image_tag('ricardogomez.gif'), {:section => ''}, {:alt => 'logoric'} %>
  </div>
  <ul id="sections">
    <% sections.each do |section| %>
      <li><%= link_to section, section_url(section, @section), :id => "section-#{section}",
        :class => (section == @section ? 'active' : '') %></li>
    <% end %>
  </ul>
</div> <!-- menu -->

